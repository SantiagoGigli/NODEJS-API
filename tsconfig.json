{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "ES6",
    "target": "ES6",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
